<configuration>
  <property name="serviceName" value="ServiceA"/>
  <appender name="LOKI" class="com.github.loki4j.logback.Loki4jAppender">
    <http>
      <url>http://localhost:3100/loki/api/v1/push</url>
    </http>
    <labels>
      <label>service=${serviceName}</label>
      <label>traceId=%X{traceId}</label>
      <label>level=%level</label>
    </labels>
    <format>
      <pattern>
        %d{yyyy-MM-dd'T'HH:mm:ss.SSSXXX} %5p --- [%thread] [traceId=%X{traceId}] [spanId=%X{spanId}] [b3=%X{b3}] [mdc=%mdc] [%property{serviceName}] %c{1} : %m%n
      </pattern>
    </format>
  </appender>
  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%d{yyyy-MM-dd'T'HH:mm:ss.SSSXXX} %5p --- [%thread] [%X{traceId}] [%property{serviceName}] %c{1} : %m%n</pattern>
    </encoder>
  </appender>
  <root level="INFO">
    <appender-ref ref="LOKI"/>
    <appender-ref ref="STDOUT"/>
  </root>
</configuration>
